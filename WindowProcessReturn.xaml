<Window x:Class="SportsRentalSystem.WindowProcessReturn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Оформление возврата" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White" 
            CornerRadius="10" 
            BorderThickness="1" 
            BorderBrush="#E0E0E0"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Color="#40000000"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Background="#4CAF50" 
                    CornerRadius="8,8,0,0" 
                    Padding="20,15"
                    Margin="0,0,0,20">
                <DockPanel>
                    <TextBlock Text="🔄 Оформление возврата" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <Button x:Name="btnClose" 
                           Content="✕" 
                           Background="Transparent" 
                           BorderThickness="0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="30"
                           Height="30"
                           DockPanel.Dock="Right"
                           Cursor="Hand"
                           Click="btnClose_Click"/>
                </DockPanel>
            </Border>

            <!-- Форма -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Поиск проката -->
                    <GroupBox Header="🔍 Поиск проката" FontWeight="SemiBold" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Поиск по клиенту или оборудованию*" Margin="0,0,0,5" Foreground="#666"/>
                            <TextBox x:Name="txtSearch" 
                                    Style="{StaticResource ModernTextBox}"
                                    TextChanged="txtSearch_TextChanged"
                                    Height="40"/>

                            <ListView x:Name="lvActiveRentals" 
                                     Height="150" 
                                     Margin="0,10,0,0"
                                     SelectionChanged="lvActiveRentals_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Клиент" Width="150">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="Clients.LastName"/>
                                                    <Binding Path="Clients.FirstName"/>
                                                </MultiBinding>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Оборудование" Width="150" DisplayMemberBinding="{Binding Equipment.Name}"/>
                                        <GridViewColumn Header="Дата выдачи" Width="100" DisplayMemberBinding="{Binding RentalDate, StringFormat=dd.MM.yyyy}"/>
                                        <GridViewColumn Header="План возврата" Width="100" DisplayMemberBinding="{Binding PlannedReturnDate, StringFormat=dd.MM.yyyy}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </GroupBox>

                    <!-- Информация о прокате -->
                    <GroupBox x:Name="grpRentalInfo" Header="📋 Информация о прокате" FontWeight="SemiBold" Margin="0,0,0,15" Visibility="Collapsed">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Клиент:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtClientInfo" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Оборудование:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtEquipmentInfo" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Стоимость:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtCostInfo" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Состояние оборудования -->
                    <GroupBox Header="🔍 Состояние оборудования" FontWeight="SemiBold" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Состояние при возврате*" Margin="0,0,0,5" Foreground="#666"/>
                            <ComboBox x:Name="cmbReturnCondition" 
                                     Style="{StaticResource ModernComboBox}"
                                     SelectionChanged="cmbReturnCondition_SelectionChanged">
                                <ComboBoxItem Content="Excellent" Tag="Отличное"/>
                                <ComboBoxItem Content="Good" Tag="Хорошее"/>
                                <ComboBoxItem Content="Damaged" Tag="Поврежденное"/>
                                <ComboBoxItem Content="Lost" Tag="Утеряно"/>
                            </ComboBox>

                            <TextBlock Text="Описание повреждений" Margin="0,15,0,5" Foreground="#666" x:Name="txtDamageLabel"/>
                            <TextBox x:Name="txtDamageDescription" 
                                    Style="{StaticResource ModernTextBox}" 
                                    Height="60"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    Visibility="Collapsed"/>

                            <TextBlock Text="Комментарий менеджера" Margin="0,15,0,5" Foreground="#666"/>
                            <TextBox x:Name="txtManagerComment" 
                                    Style="{StaticResource ModernTextBox}" 
                                    Height="60"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Расчет залога -->
                    <GroupBox x:Name="grpDepositCalc" Header="💰 Расчет залога" FontWeight="SemiBold" Margin="0,0,0,15" Visibility="Collapsed">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Сумма залога:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtDepositAmount" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Удержано:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtWithheldAmount" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Height="1" Fill="#E0E0E0" Margin="0,10,0,10"/>

                            <TextBlock Text="К возврату:" Grid.Row="3" Grid.Column="0" FontSize="16" FontWeight="Bold" Foreground="#333333"/>
                            <TextBlock x:Name="txtReturnAmount" Grid.Row="3" Grid.Column="1" Style="{StaticResource PriceTextBlock}" Text="0 ₽"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2" 
                    Background="#F9F9F9" 
                    CornerRadius="0,0,8,8" 
                    Padding="20,15"
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnCancel" 
                           Content="Отмена" 
                           Style="{StaticResource CancelButton}"
                           Margin="0,0,10,0"
                           Click="btnCancel_Click"/>
                    <Button x:Name="btnProcessReturn" 
                           Content="Оформить возврат" 
                           Style="{StaticResource ActionButton}"
                           Click="btnProcessReturn_Click"
                           IsEnabled="False"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>