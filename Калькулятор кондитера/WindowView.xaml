<Window x:Class="SportsRentalSystem.WindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsRentalSystem"
        mc:Ignorable="d"
        Title="Просмотр оборудования" 
        Height="550" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InfoValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            BorderThickness="1" 
            BorderBrush="#E0E0E0"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Color="#40000000"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Background="#2196F3" 
                    CornerRadius="8,8,0,0" 
                    Padding="20,15"
                    Margin="0,0,0,20">
                <DockPanel>
                    <TextBlock Text="👁️ Просмотр оборудования" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <Button x:Name="btnClose" 
                           Content="✕" 
                           Background="Transparent" 
                           BorderThickness="0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="30"
                           Height="30"
                           DockPanel.Dock="Right"
                           Cursor="Hand"
                           Click="btnClose_Click"/>
                </DockPanel>
            </Border>

            <!-- Информация -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Основная информация -->
                    <GroupBox Header="📋 Основная информация" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtName" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Категория:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtCategory" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Статус:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtStatus" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Описание:" Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtDescription" Grid.Row="3" Grid.Column="1" Style="{StaticResource InfoValue}" TextWrapping="Wrap"/>
                        </Grid>
                    </GroupBox>

                    <!-- Техническая информация -->
                    <GroupBox Header="🔧 Техническая информация" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Серийный номер:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtSerialNumber" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Дата поступления:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtReceiptDate" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="ID оборудования:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtEquipmentID" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Финансовая информация -->
                    <GroupBox Header="💰 Стоимость проката" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Стоимость/день:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtDailyCost" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Стоимость/час:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtHourlyCost" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Залог:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtDeposit" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Дополнительная информация -->
                    <GroupBox Header="📝 Дополнительная информация" FontWeight="SemiBold" FontSize="14">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Примечания:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtNotes" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" TextWrapping="Wrap"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2" 
                    Background="#F9F9F9" 
                    CornerRadius="0,0,8,8" 
                    Padding="20,15"
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnDelete" 
                           Content="🗑️ Удалить" 
                           Style="{StaticResource DeleteButton}"
                           Margin="0,0,10,0"
                           Click="btnDelete_Click"/>
                    <Button x:Name="btnEdit" 
                           Content="✏️ Редактировать" 
                           Style="{StaticResource ActionButton}"
                           Margin="0,0,10,0"
                           Click="btnEdit_Click" Height="41" VerticalAlignment="Top"/>
                    <Button x:Name="btnCloseWindow" 
                           Content="Закрыть" 
                           Style="{StaticResource CancelButton}"
                           Click="btnClose_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>