<Window x:Class="SportsRentalSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:SportsRentalSystem"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        Title="Система учета проката спортивного оборудования"  MouseDown="Border_MouseDown"
        Height="670" Width="1100" 
        >


    <Border CornerRadius="10 10 10 10" Grid.Column="0" BorderThickness="2 2 2 2" Background="White">
        
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="Gray" Offset="0.5"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid Margin="0 10 0 0">
            <TextBlock x:Name="nameSotrudnik" Text="Добро пожаловать, " FontSize="14"></TextBlock>
            <StackPanel x:Name="pnlControlBar"  Margin ="0 0 0 0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                VerticalAlignment="Top" >
                <Button x:Name="btnClose" Cursor="Hand"  Style="{StaticResource controlButton}"
                                Click="Close">
                    <iconPacks:PackIconMaterial Width="15" Height="15" Kind="CloseBoxOutline" Style="{StaticResource controlButtonIcon}"/>
                    <Button.ToolTip>
                        <ToolTip Placement="MousePoint">Закрыть</ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="btnMax" Cursor="Hand"  Style="{StaticResource controlButton}"
                                Click="Maximize">
                    <iconPacks:PackIconMaterial Width="15" Height="15" Kind="MinusBoxOutline" Style="{StaticResource controlButtonIcon}"/>
                    <Button.ToolTip>
                        <ToolTip Placement="MousePoint">
                            <TextBlock x:Name="ToolTip" Text="Развернуть"/>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="btnMinimize" Cursor="Hand"  Style="{StaticResource controlButton}"
                                
                                Click="Minimize">
                    <iconPacks:PackIconMaterial  Kind="WindowMinimize" Width="15" Height="15" Style="{StaticResource controlButtonIcon}"/>
                    <Button.ToolTip>
                        <ToolTip Placement="MousePoint">Свернуть</ToolTip>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
            <TabControl BorderBrush="Transparent" Background="Transparent" BorderThickness="1" Margin="0 20 0 0"> 

                <!-- Вкладка оборудования -->
                <TabItem Header="🏄 Оборудование" Style="{StaticResource EquipmentTabStyle}">
                    <Grid Margin="15" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="➕ Добавить" Style="{StaticResource GreenButtonStyle}" Margin="0,0,10,0" Height="Auto" Click="Button_Click"/>
                                <!--<Button Content="✏️ Редактировать" Style="{StaticResource BlueButtonStyle}" Margin="0,0,10,0" Click="EditButton_Click"/>
                                <Button Content="🗑️ Удалить" Style="{StaticResource RedButtonStyle}" Margin="0,0,10,0" Click="DeleteButton_Click"/>-->
                                <TextBlock Text="🔍 Поиск:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                                <TextBox x:Name="poisk" Width="250" Height="30" Background="White" BorderBrush="#BDBDBD" Padding="5"  TextChanged="up"/>
                                <!-- Фильтр по статусу -->
                                <ComboBox x:Name="cmbStatusFilter" 
                         Width="180" 
                         Height="30" 
                         Margin="10,0,0,0"
                         Background="White" 
                         BorderBrush="#BDBDBD"
                         DisplayMemberPath="StatusName"
                         SelectionChanged="cmbStatusFilter_SelectionChanged"/>
                                <!-- Фильтр по категории -->
                                <ComboBox x:Name="cmbCategoryFilter" 
                         Width="180" 
                         Height="30" 
                         Margin="10,0,0,0"
                         Background="White" 
                         BorderBrush="#BDBDBD"
                         DisplayMemberPath="CategoryName"
                         SelectionChanged="cmbCategoryFilter_SelectionChanged"/>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="1"
                              Background="White">
                            <ListView x:Name="ListVi" MouseDoubleClick="ListVi_MouseDoubleClick">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Название" Width="250">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Name"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Категория" Width="170">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Categories.CategoryName"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Статус" Width="100">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Statuses.StatusName"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Серийный номер" Width="120">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="SerialNumber"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Стоимость/день" Width="100">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="DailyRentalCost" StringFormat="{}{0} ₽"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Стоимость/час" Width="100">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="HourlyRentalCost" StringFormat="{}{0} ₽"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Залог" Width="90">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="DepositAmount" StringFormat="{}{0} ₽"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Дата поступления" Width="120">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="ReceiptDate" StringFormat="{}{0:dd.MM.yyyy}"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>

                        
                        
                        <Border Grid.Row="2" Background="#E8F5E9" CornerRadius="3" Padding="10" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Vsego" Text="📊 Всего единиц: " FontWeight="SemiBold"/>
                                <TextBlock x:Name="Dostupno" Text=" Доступно: " FontWeight="SemiBold"/>
                                <TextBlock x:Name="NeDostupno" Text=" В прокате: " FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Вкладка клиентов -->
                <!-- Вкладка клиентов -->
                <TabItem Header="👥 Клиенты" Style="{StaticResource ClientsTabStyle}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="👤 Новый клиент" Style="{StaticResource BlueButtonStyle}" Margin="0,0,10,0" Click="AddClientButton_Click"/>
                                <!--<Button Content="✏️ Редактировать" Style="{StaticResource BlueButtonStyle}" Margin="0,0,10,0" Click="EditClientButton_Click"/>-->
                                <!--<Button Content="🗑️ Удалить" Style="{StaticResource RedButtonStyle}" Margin="0,0,10,0" Click="DeleteClientButton_Click"/>-->

                                <!-- Поле поиска по ФИО -->
                                <TextBlock Text="🔍 Поиск:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                                <TextBox x:Name="poiskClient" Width="250" Height="30" Background="White" BorderBrush="#BDBDBD" Padding="5" TextChanged="upClient"/>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="1" Background="White">
                            <ListView x:Name="ListViClients" MouseDoubleClick="ListViClients_MouseDoubleClick">
                                <ListView.View>
                                    <GridView>
                                        <!-- Заголовки колонок -->
                                        <GridViewColumn Header="Фамилия" Width="120">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="LastName"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Имя" Width="120">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="FirstName"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Отчество" Width="120">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="MiddleName"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Телефон" Width="130">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Phone"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Email" Width="180">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Email"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Дата регистрации" Width="120">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="RegistrationDate" StringFormat="{}{0:dd.MM.yyyy}"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>

                        <Border Grid.Row="2" Background="#E8F5E9" CornerRadius="3" Padding="10" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="VsegoClients" Text="📊 Всего клиентов: " FontWeight="SemiBold"/>
                                <TextBlock x:Name="ActiveClients" Text=" Активных: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                                <TextBlock x:Name="NewClients" Text=" Новых за месяц: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Вкладка проката -->
                <!-- Вкладка проката -->
                <TabItem Header="🎯 Прокат" Style="{StaticResource RentalTabStyle}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="🎯 Оформить прокат" Style="{StaticResource GreenButtonStyle}" Margin="0,0,10,0" Click="AddRentalButton_Click"/>
                                <TextBlock Text="🔍 Поиск:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                                <TextBox x:Name="poiskRentals" Width="300" Height="30" Background="White" BorderBrush="#BDBDBD" Padding="5" TextChanged="upRentals"/>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="1" Background="White">
                            <ListView x:Name="ListViRentals">
                                <ListView.View>
                                    <GridView>
                                        <!-- Существующие колонки -->
                                        <GridViewColumn Header="ID проката" DisplayMemberBinding="{Binding RentalID}" Width="80"/>
                                        <GridViewColumn Header="Клиент" DisplayMemberBinding="{Binding ClientName}" Width="120"/>
                                        <GridViewColumn Header="Оборудование" DisplayMemberBinding="{Binding EquipmentName}" Width="150"/>
                                        <GridViewColumn Header="Сотрудник" DisplayMemberBinding="{Binding EmployeeName}" Width="120"/>
                                        <!-- Новая колонка -->
                                        <GridViewColumn Header="Дата проката" DisplayMemberBinding="{Binding RentalDate, StringFormat=dd.MM.yyyy HH:mm}" Width="120"/>
                                        <GridViewColumn Header="План возврата" DisplayMemberBinding="{Binding PlannedReturnDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                                        <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding RentalType}" Width="60"/>
                                        <GridViewColumn Header="Период" DisplayMemberBinding="{Binding RentalPeriod}" Width="60"/>
                                        <GridViewColumn Header="Стоимость" DisplayMemberBinding="{Binding TotalCost, StringFormat={}{0:N2} ₽}" Width="80"/>
                                        <GridViewColumn Header="Статус оплаты" DisplayMemberBinding="{Binding PaymentStatus}" Width="100"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>

                        <Border Grid.Row="2" Background="#E8F5E9" CornerRadius="3" Padding="10" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="VsegoRentals" Text="📊 Всего прокатов: " FontWeight="SemiBold"/>
                                <TextBlock x:Name="ActiveRentals" Text=" Активных: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                                <TextBlock x:Name="OverdueRentals" Text=" Просроченных: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Header="🔄 Возврат" Style="{StaticResource RentalTabStyle}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="🔄 Оформить возврат" Style="{StaticResource BlueButtonStyle}" Margin="0,0,10,0" Click="ProcessReturnButton_Click"/>
                                <Button Content="🔄 Обновить список" Style="{StaticResource GreenButtonStyle}" Click="RefreshReturnsButton_Click"/>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="1" Background="White">
                            <ListView x:Name="ListViReturns" MouseDoubleClick="ListViReturns_MouseDoubleClick">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="ID возврата" DisplayMemberBinding="{Binding ReturnID}" Width="80"/>
                                        <GridViewColumn Header="ID проката" DisplayMemberBinding="{Binding RentalID}" Width="80"/>
                                        <GridViewColumn Header="Оборудование" DisplayMemberBinding="{Binding EquipmentName}" Width="150"/>
                                        <GridViewColumn Header="Клиент" DisplayMemberBinding="{Binding ClientName}" Width="120"/>
                                        <GridViewColumn Header="Дата возврата" DisplayMemberBinding="{Binding ActualReturnDate, StringFormat=dd.MM.yyyy HH:mm}" Width="120"/>
                                        <GridViewColumn Header="Состояние" DisplayMemberBinding="{Binding ReturnCondition}" Width="100"/>
                                        <GridViewColumn Header="Описание повреждений" DisplayMemberBinding="{Binding DamageDescription}" Width="150"/>
                                        <GridViewColumn Header="Комментарий" DisplayMemberBinding="{Binding ManagerComment}" Width="150"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>

                        <Border Grid.Row="2" Background="#E8F5E9" CornerRadius="3" Padding="10" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="VsegoReturns" Text="📊 Всего возвратов: " FontWeight="SemiBold"/>
                                <TextBlock x:Name="ActiveReturns" Text=" В хорошем состоянии: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                                <TextBlock x:Name="OverdueReturns" Text=" С повреждениями/утеряны: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>
                <!-- Вкладка сотрудников -->
                <!-- Вкладка сотрудников -->
                <TabItem Header="👥 Сотрудники" Style="{StaticResource EmployeesTabStyle}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="👥 Добавить сотрудника" Style="{StaticResource GreenButtonStyle}" Margin="0,0,10,0" Click="AddEmployeeButton_Click"/>
                                <!--<Button Content="✏️ Редактировать" Style="{StaticResource BlueButtonStyle}" Margin="0,0,10,0" Click="EditEmployeeButton_Click"/>
                                <Button Content="🗑️ Удалить" Style="{StaticResource RedButtonStyle}" Margin="0,0,10,0" Click="DeleteEmployeeButton_Click"/>-->

                                <!-- Поле поиска по ФИО -->
                                <TextBox x:Name="poiskEmployee" Width="250" Height="30" Background="White" BorderBrush="#BDBDBD" Padding="5" TextChanged="upEmployee"/>

                                <!-- Фильтр по должности -->
                                <ComboBox x:Name="cmbPositionFilter" 
                         Width="180" 
                         Height="30" 
                         Margin="10,0,0,0"
                         Background="White" 
                         BorderBrush="#BDBDBD"
                         SelectionChanged="cmbPositionFilter_SelectionChanged">
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="1" Background="White">
                            <ListView x:Name="ListViEmployees" MouseDoubleClick="ListViEmployees_MouseDoubleClick">
                                <ListView.View>
                                    <GridView>
                                        <!-- Заголовки колонок -->
                                        <GridViewColumn Header="Фамилия" Width="120">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="LastName"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Имя" Width="120">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="FirstName"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Отчество" Width="120">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="MiddleName"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Телефон" Width="130">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Phone"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Email" Width="180">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Email"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Должность" Width="150">
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Position"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>

                        <Border Grid.Row="2" Background="#E8F5E9" CornerRadius="3" Padding="10" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="VsegoEmployees" Text="📊 Всего сотрудников: " FontWeight="SemiBold"/>
                                <TextBlock x:Name="AdminCount" Text=" Администраторов: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                                <TextBlock x:Name="ManagerCount" Text=" Менеджеров: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Header="📊 Отчёты" Style="{StaticResource OtchetTabStyle}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Период отчета -->
                        <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📅 Период отчета:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                                <DatePicker x:Name="dpReportStartDate" 
                           Width="150" 
                           Height="30" 
                           Margin="0,0,10,0"
                           SelectedDate="{x:Static sys:DateTime.Now}"
                           SelectedDateChanged="dpReportDate_SelectedDateChanged">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Text" Value="Начало"/>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>

                                <TextBlock Text="по" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                <DatePicker x:Name="dpReportEndDate" 
                           Width="150" 
                           Height="30" 
                           Margin="0,0,10,0"
                           SelectedDate="{x:Static sys:DateTime.Now}"
                           SelectedDateChanged="dpReportDate_SelectedDateChanged">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Text" Value="Конец"/>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>

                                <Button Content="🔄 Обновить" 
                       Style="{StaticResource BlueButtonStyle}" 
                       Click="RefreshReportsButton_Click"
                       Margin="10,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Ключевые показатели -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1. Выручка -->
                            <Border Grid.Column="0" 
                    Background="#E8F5E9" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Выручка" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtRevenue" 
                              Text="0 ₽" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="#2E7D32"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- 2. Количество прокатов -->
                            <Border Grid.Column="1" 
                    Background="#E3F2FD" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="🎯" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Прокатов" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtRentalCount" 
                              Text="0" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="#1565C0"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- 3. Новые клиенты -->
                            <Border Grid.Column="2" 
                    Background="#FFF3E0" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Новых клиентов" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtNewClients" 
                              Text="0" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="#EF6C00"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- 4. Возвраты -->
                            <Border Grid.Column="3" 
                    Background="#FCE4EC" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="🔄" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Возвратов" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtReturnsCount" 
                              Text="0" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="#C2185B"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- 5. Средний чек -->
                            <Border Grid.Column="4" 
                    Background="#E0F2F1" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Средний чек" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtAvgCheck" 
                              Text="0 ₽" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="#00695C"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Детальная информация -->
                        <Grid Grid.Row="2" Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Топ клиентов -->
                            <Border Grid.Row="0" 
                    Style="{StaticResource PanelStyle}" 
                    Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="🏆 Топ-5 клиентов по прокатам" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Margin="0,0,0,10"/>
                                    <ListView x:Name="lvTopClients" Height="150">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Клиент" Width="200" DisplayMemberBinding="{Binding ClientName}"/>
                                                <GridViewColumn Header="Кол-во прокатов" Width="100" DisplayMemberBinding="{Binding RentalCount}"/>
                                                <GridViewColumn Header="Сумма" Width="100" DisplayMemberBinding="{Binding TotalAmount, StringFormat={}{0:N2} ₽}"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </StackPanel>
                            </Border>

                            <!-- Топ оборудования -->
                            <Border Grid.Row="1" 
                    Style="{StaticResource PanelStyle}">
                                <StackPanel>
                                    <TextBlock Text="🏄 Топ-5 оборудования по прокатам" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Margin="0,0,0,10"/>
                                    <ListView x:Name="lvTopEquipment" Height="150">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Оборудование" Width="200" DisplayMemberBinding="{Binding EquipmentName}"/>
                                                <GridViewColumn Header="Категория" Width="150" DisplayMemberBinding="{Binding CategoryName}"/>
                                                <GridViewColumn Header="Кол-во прокатов" Width="100" DisplayMemberBinding="{Binding RentalCount}"/>
                                                <GridViewColumn Header="Доход" Width="100" DisplayMemberBinding="{Binding TotalRevenue, StringFormat={}{0:N2} ₽}"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>