<Window x:Class="SportsRentalSystem.WindowAddRental"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsRentalSystem"
        mc:Ignorable="d"
        Title="Оформление проката" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>

    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            BorderThickness="1" 
            BorderBrush="#E0E0E0"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Color="#40000000"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Background="#FF9800" 
                    CornerRadius="8,8,0,0" 
                    Padding="20,15"
                    Margin="0,0,0,20">
                <DockPanel>
                    <TextBlock Text="🎯 Оформление проката" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <Button x:Name="btnClose" 
                           Content="✕" 
                           Background="Transparent" 
                           BorderThickness="0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="30"
                           Height="30"
                           DockPanel.Dock="Right"
                           Cursor="Hand"
                           Click="btnClose_Click"/>
                </DockPanel>
            </Border>

            <!-- Форма -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Выбор клиента и оборудования -->
                    <GroupBox Header="👥 Выбор клиента и оборудования" FontWeight="SemiBold" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Клиент*" Margin="0,0,0,5" Foreground="#666"/>
                            <ComboBox x:Name="cmbClient" 
                                     Style="{StaticResource ModernComboBox}"
                                     DisplayMemberPath="DisplayText"
                                     IsEditable="True"
                                     IsTextSearchEnabled="True"
                                     TextSearch.TextPath="DisplayText"
                                     StaysOpenOnEdit="True"
                                     SelectionChanged="cmbClient_SelectionChanged"/>

                            <TextBlock Text="Оборудование*" Margin="0,15,0,5" Foreground="#666"/>
                            <ComboBox x:Name="cmbEquipment" 
                                     Style="{StaticResource ModernComboBox}"
                                     DisplayMemberPath="Name"
                                     SelectionChanged="cmbEquipment_SelectionChanged"/>

                            <!-- Информация о выбранном оборудовании -->
                            <Border x:Name="borderEquipmentInfo" 
                                   Background="#F3F3F3" 
                                   CornerRadius="5" 
                                   Padding="10" 
                                   Margin="0,10,0,0"
                                   Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock x:Name="txtEquipmentInfo" FontSize="12"/>
                                    <TextBlock x:Name="txtEquipmentPrice" Style="{StaticResource PriceTextBlock}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>

                    <!-- Параметры проката -->
                    <GroupBox Header="📅 Параметры проката" FontWeight="SemiBold" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Тип проката*" Margin="0,0,0,5" Foreground="#666"/>
                                <ComboBox x:Name="cmbRentalType" 
                                         Style="{StaticResource ModernComboBox}"
                                         SelectionChanged="cmbRentalType_SelectionChanged">
                                    <ComboBoxItem Content="час"/>
                                    <ComboBoxItem Content="день"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Период проката*" Margin="0,0,0,5" Foreground="#666"/>
                                <TextBox x:Name="txtRentalPeriod" 
                                    Style="{StaticResource ModernTextBox}"
                                    Text="1"
                                    TextChanged="txtRentalPeriod_TextChanged"
                                    PreviewTextInput="txtRentalPeriod_PreviewTextInput"
                                    DataObject.Pasting="txtRentalPeriod_Pasting"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0">
                                <TextBlock Text="Дата возврата*" Margin="0,0,0,5" Foreground="#666"/>
                                <DatePicker x:Name="dpPlannedReturnDate" 
                                           Height="40"
                                           FontSize="14"
                                           SelectedDateChanged="dpPlannedReturnDate_SelectedDateChanged"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Расчет стоимости -->
                    <GroupBox Header="💰 Расчет стоимости" FontWeight="SemiBold" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Стоимость проката:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoTextBlock}"/>
                            <TextBlock x:Name="txtRentalCost" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoTextBlock}" Text="0 ₽"/>

                            <TextBlock Text="Залог:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,5,0,0"/>
                            <TextBlock x:Name="txtDepositCost" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoTextBlock}" Text="0 ₽" Margin="0,5,0,0"/>

                            <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Height="1" Fill="#E0E0E0" Margin="0,10,0,10"/>

                            <TextBlock Text="ИТОГО:" Grid.Row="3" Grid.Column="0" FontSize="16" FontWeight="Bold" Foreground="#333333"/>
                            <TextBlock x:Name="txtTotalCost" Grid.Row="3" Grid.Column="1" Style="{StaticResource PriceTextBlock}" Text="0 ₽"/>
                        </Grid>
                    </GroupBox>

                    <!-- Дополнительная информация -->
                    <GroupBox Header="📝 Дополнительная информация" FontWeight="SemiBold">
                        <StackPanel Margin="10">
                            <TextBlock Text="Статус оплаты" Margin="0,0,0,5" Foreground="#666"/>
                            <ComboBox x:Name="cmbPaymentStatus" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="не оплачено"/>
                                <ComboBoxItem Content="оплачено"/>
                                <ComboBoxItem Content="частично"/>
                            </ComboBox>

                            <TextBlock Text="Примечания" Margin="0,15,0,5" Foreground="#666"/>
                            <TextBox x:Name="txtNotes" 
                                    Style="{StaticResource ModernTextBox}" 
                                    Height="60"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2" 
                    Background="#F9F9F9" 
                    CornerRadius="0,0,8,8" 
                    Padding="20,15"
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnCancel" 
                           Content="Отмена" 
                           Style="{StaticResource CancelButton}"
                           Margin="0,0,10,0"
                           Click="btnCancel_Click"/>
                    <Button x:Name="btnSave" 
                           Content="Оформить прокат" 
                           Style="{StaticResource ActionButton}"
                           Click="btnSave_Click" Height="41" VerticalAlignment="Top"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>