<Window x:Class="SportsRentalSystem.WindowAddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsRentalSystem"
        mc:Ignorable="d"
        Title="Добавление сотрудника" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>

    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            BorderThickness="1" 
            BorderBrush="#E0E0E0"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Color="#40000000"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Background="#9C27B0" 
                    CornerRadius="8,8,0,0" 
                    Padding="20,15"
                    Margin="0,0,0,20">
                <DockPanel>
                    <TextBlock Text="👥 Добавить сотрудника" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <Button x:Name="btnClose" 
                           Content="✕" 
                           Background="Transparent" 
                           BorderThickness="0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="30"
                           Height="30"
                           DockPanel.Dock="Right"
                           Cursor="Hand"
                           Click="btnClose_Click"/>
                </DockPanel>
            </Border>

            <!-- Форма -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Личная информация -->
                    <GroupBox Header="👤 Личная информация" FontWeight="SemiBold" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Фамилия*" Margin="0,0,0,5" Foreground="#666"/>
                            <TextBox x:Name="txtLastName" Style="{StaticResource ModernTextBox}"/>

                            <TextBlock Text="Имя*" Margin="0,15,0,5" Foreground="#666"/>
                            <TextBox x:Name="txtFirstName" Style="{StaticResource ModernTextBox}"/>

                            <TextBlock Text="Отчество" Margin="0,15,0,5" Foreground="#666"/>
                            <TextBox x:Name="txtMiddleName" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Контактная информация -->
                    <GroupBox Header="📞 Контактная информация" FontWeight="SemiBold" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Телефон*" Margin="0,0,0,5" Foreground="#666"/>
                            <TextBox x:Name="txtPhone" Style="{StaticResource ModernTextBox}"/>

                            <TextBlock Text="Email" Margin="0,15,0,5" Foreground="#666"/>
                            <TextBox x:Name="txtEmail" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Рабочая информация -->
                    <GroupBox Header="💼 Рабочая информация" FontWeight="SemiBold" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Должность*" Margin="0,0,0,5" Foreground="#666"/>
                            <ComboBox x:Name="cmbPosition" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Администратор"/>
                                <ComboBoxItem Content="Менеджер"/>
                                <ComboBoxItem Content="Консультант"/>
                                <ComboBoxItem Content="Технический специалист"/>
                                <ComboBoxItem Content="Уборщик"/>
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- Учетные данные -->
                    <GroupBox Header="🔐 Учетные данные" FontWeight="SemiBold">
                        <StackPanel Margin="10">
                            <TextBlock Text="Пароль*" Margin="0,0,0,5" Foreground="#666"/>
                            <Grid>
                                <PasswordBox x:Name="txtPassword" 
                                            Height="40" 
                                            Padding="10"
                                            FontSize="14"
                                            Background="#FAFAFA"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            PasswordChar="•"/>
                                <Button x:Name="btnTogglePassword" 
                                       Background="Transparent" 
                                       BorderThickness="0"
                                       HorizontalAlignment="Right"
                                       Width="40"
                                       Height="40"
                                       Cursor="Hand"
                                       Click="btnTogglePassword_Click"
                                       ToolTip="Показать/скрыть пароль">
                                    <TextBlock Text="👁" FontSize="16"/>
                                </Button>
                            </Grid>
                            <TextBlock Text="Повторите пароль*" Margin="0,15,0,5" Foreground="#666"/>
                            <PasswordBox x:Name="txtConfirmPassword" 
                                        Height="40" 
                                        Padding="10"
                                        FontSize="14"
                                        Background="#FAFAFA"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        PasswordChar="•"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2" 
                    Background="#F9F9F9" 
                    CornerRadius="0,0,8,8" 
                    Padding="20,15"
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnCancel" 
                           Content="Отмена" 
                           Style="{StaticResource CancelButton}"
                           Margin="0,0,10,0"
                           Click="btnCancel_Click"/>
                    <Button x:Name="btnSave" 
                           Content="Сохранить сотрудника" 
                           Style="{StaticResource ActionButton}"
                           Click="btnSave_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>