<Window x:Class="SportsRentalSystem.WindowViewReturn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsRentalSystem"
        mc:Ignorable="d"
        Title="Просмотр возврата" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="InfoTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF9800"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            BorderThickness="1" 
            BorderBrush="#E0E0E0"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Color="#40000000"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Background="#4CAF50" 
                    CornerRadius="8,8,0,0" 
                    Padding="20,15"
                    Margin="0,0,0,20">
                <DockPanel>
                    <TextBlock Text="📋 Просмотр возврата" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <Button x:Name="btnClose" 
                           Content="✕" 
                           Background="Transparent" 
                           BorderThickness="0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="30"
                           Height="30"
                           DockPanel.Dock="Right"
                           Cursor="Hand"
                           Click="btnClose_Click"/>
                </DockPanel>
            </Border>

            <!-- Содержимое -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Информация о возврате -->
                    <GroupBox Header="📅 Информация о возврате" FontWeight="SemiBold" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="ID возврата:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtReturnID" Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueTextBlock}" Margin="0,0,20,5"/>

                            <TextBlock Text="ID проката:" Grid.Row="0" Grid.Column="2" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtRentalID" Grid.Row="0" Grid.Column="3" Style="{StaticResource ValueTextBlock}" Margin="0,0,0,5"/>

                            <TextBlock Text="Фактическая дата возврата:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtActualReturnDate" Grid.Row="1" Grid.Column="1" Style="{StaticResource ValueTextBlock}" Margin="0,0,20,5"/>

                            <TextBlock Text="Состояние при возврате:" Grid.Row="1" Grid.Column="2" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtReturnCondition" Grid.Row="1" Grid.Column="3" Style="{StaticResource ValueTextBlock}" Margin="0,0,0,5"/>

                            <TextBlock Text="Описание повреждений:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtDamageDescription" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource ValueTextBlock}" Margin="0,0,0,5" TextWrapping="Wrap"/>

                            <TextBlock Text="Комментарий менеджера:" Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtManagerComment" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource ValueTextBlock}" Margin="0,0,0,5" TextWrapping="Wrap"/>
                        </Grid>
                    </GroupBox>

                    <!-- Информация о прокате -->
                    <GroupBox Header="🎯 Информация о прокате" FontWeight="SemiBold" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Клиент:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtClient" Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueTextBlock}" Margin="0,0,20,5"/>

                            <TextBlock Text="Оборудование:" Grid.Row="0" Grid.Column="2" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtEquipment" Grid.Row="0" Grid.Column="3" Style="{StaticResource ValueTextBlock}" Margin="0,0,0,5"/>

                            <TextBlock Text="Дата проката:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtRentalDate" Grid.Row="1" Grid.Column="1" Style="{StaticResource ValueTextBlock}" Margin="0,0,20,5"/>

                            <TextBlock Text="Плановая дата возврата:" Grid.Row="1" Grid.Column="2" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtPlannedReturnDate" Grid.Row="1" Grid.Column="3" Style="{StaticResource ValueTextBlock}" Margin="0,0,0,5"/>

                            <TextBlock Text="Тип проката:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtRentalType" Grid.Row="2" Grid.Column="1" Style="{StaticResource ValueTextBlock}" Margin="0,0,20,5"/>

                            <TextBlock Text="Период проката:" Grid.Row="2" Grid.Column="2" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtRentalPeriod" Grid.Row="2" Grid.Column="3" Style="{StaticResource ValueTextBlock}" Margin="0,0,0,5"/>

                            <TextBlock Text="Общая стоимость:" Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtTotalCost" Grid.Row="3" Grid.Column="1" Style="{StaticResource ValueTextBlock}" Margin="0,0,20,5"/>

                            <TextBlock Text="Статус оплаты:" Grid.Row="3" Grid.Column="2" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtPaymentStatus" Grid.Row="3" Grid.Column="3" Style="{StaticResource ValueTextBlock}" Margin="0,0,0,5"/>
                        </Grid>
                    </GroupBox>

                    <!-- Дополнительная информация -->
                    <GroupBox Header="📝 Дополнительная информация" FontWeight="SemiBold">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Примечания к прокату:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,0,10,5"/>
                            <TextBlock x:Name="txtRentalNotes" Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueTextBlock}" Margin="0,0,0,5" TextWrapping="Wrap"/>

                            <TextBlock Text="Сотрудник:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoTextBlock}" Margin="0,10,10,0"/>
                            <TextBlock x:Name="txtEmployee" Grid.Row="1" Grid.Column="1" Style="{StaticResource ValueTextBlock}" Margin="0,10,0,0"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2" 
                    Background="#F9F9F9" 
                    CornerRadius="0,0,8,8" 
                    Padding="20,15"
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnCloseBottom" 
                           Content="Закрыть" 
                           Style="{StaticResource CancelButton}"
                           Click="btnClose_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>