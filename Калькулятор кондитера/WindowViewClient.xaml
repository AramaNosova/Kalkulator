<Window x:Class="SportsRentalSystem.WindowViewClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsRentalSystem"
        mc:Ignorable="d"
        Title="Просмотр клиента" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Используем те же стили, что и для сотрудников -->

    <Border Background="White" 
            CornerRadius="10" 
            BorderThickness="1" 
            BorderBrush="#E0E0E0"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Color="#40000000"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Background="#2196F3" 
                    CornerRadius="8,8,0,0" 
                    Padding="20,15"
                    Margin="0,0,0,20">
                <DockPanel>
                    <TextBlock Text="👁️ Просмотр клиента" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <Button x:Name="btnClose" 
                           Content="✕" 
                           Background="Transparent" 
                           BorderThickness="0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="30"
                           Height="30"
                           DockPanel.Dock="Right"
                           Cursor="Hand"
                           Click="btnClose_Click"/>
                </DockPanel>
            </Border>

            <!-- Информация -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Фамилия:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                        <TextBlock x:Name="txtLastName" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                        <TextBlock Text="Имя:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                        <TextBlock x:Name="txtFirstName" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                        <TextBlock Text="Отчество:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                        <TextBlock x:Name="txtMiddleName" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                        <TextBlock Text="Телефон:" Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                        <TextBlock x:Name="txtPhone" Grid.Row="3" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                        <TextBlock Text="Email:" Grid.Row="4" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                        <TextBlock x:Name="txtEmail" Grid.Row="4" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                        <TextBlock Text="Дата регистрации:" Grid.Row="5" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                        <TextBlock x:Name="txtRegistrationDate" Grid.Row="5" Grid.Column="1" Style="{StaticResource InfoValue}"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2" 
                    Background="#F9F9F9" 
                    CornerRadius="0,0,8,8" 
                    Padding="20,15"
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnEdit" 
               Content="✏️ Редактировать" 
               Style="{StaticResource ActionButton}"
               Margin="0,0,10,0"
               Click="btnEdit_Click"/>
                    <Button x:Name="btnDelete" 
               Content="🗑️ Удалить" 
               Style="{StaticResource RedButtonStyle}"
               Margin="0,0,10,0"
               Click="btnDelete_Click"/>
                    <Button x:Name="btnCloseWindow" 
                           Content="Закрыть" 
                           Style="{StaticResource CancelButton}"
                           Click="btnClose_Click" Height="41" Margin="0,0,0,0.333" VerticalAlignment="Bottom"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>