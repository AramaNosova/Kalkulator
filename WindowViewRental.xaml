<Window x:Class="SportsRentalSystem.WindowViewRental"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsRentalSystem"
        mc:Ignorable="d"
        Title="Просмотр проката" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">


    <Border Background="White" 
            CornerRadius="10" 
            BorderThickness="1" 
            BorderBrush="#E0E0E0"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Color="#40000000"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Background="#FF9800" 
                    CornerRadius="8,8,0,0" 
                    Padding="20,15"
                    Margin="0,0,0,20">
                <DockPanel>
                    <TextBlock Text="📋 Детали проката" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <Button x:Name="btnClose" 
                           Content="✕" 
                           Background="Transparent" 
                           BorderThickness="0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="30"
                           Height="30"
                           DockPanel.Dock="Right"
                           Cursor="Hand"
                           Click="btnClose_Click"/>
                </DockPanel>
            </Border>

            <!-- Информация -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Основная информация -->
                    <GroupBox Header="📊 Основная информация" FontWeight="SemiBold" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="ID проката:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtRentalID" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Статус:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtStatus" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Дата выдачи:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtRentalDate" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="План возврата:" Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtPlannedReturn" Grid.Row="3" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Статус оплаты:" Grid.Row="4" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtPaymentStatus" Grid.Row="4" Grid.Column="1" Style="{StaticResource InfoValue}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Информация о клиенте -->
                    <GroupBox Header="👤 Информация о клиенте" FontWeight="SemiBold" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="ФИО:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtClientName" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Телефон:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtClientPhone" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtClientEmail" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Информация об оборудовании -->
                    <GroupBox Header="🏄 Информация об оборудовании" FontWeight="SemiBold" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtEquipmentName" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Категория:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtEquipmentCategory" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Серийный номер:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtEquipmentSerial" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Статус:" Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtEquipmentStatus" Grid.Row="3" Grid.Column="1" Style="{StaticResource InfoValue}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Финансовая информация -->
                    <GroupBox Header="💰 Финансовая информация" FontWeight="SemiBold" Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Тип проката:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtRentalType" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Период:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtRentalPeriod" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Стоимость проката:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtRentalCost" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Залог:" Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtDeposit" Grid.Row="3" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <Rectangle Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Height="1" Fill="#E0E0E0" Margin="0,5,0,5"/>

                            <TextBlock Text="ИТОГО:" Grid.Row="5" Grid.Column="0" Style="{StaticResource InfoLabel}" FontSize="16"/>
                            <TextBlock x:Name="txtTotalCost" Grid.Row="5" Grid.Column="1" Style="{StaticResource PriceText}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Информация о возврате -->
                    <GroupBox x:Name="grpReturnInfo" Header="🔄 Информация о возврате" FontWeight="SemiBold" Visibility="Collapsed">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Факт. возврат:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtActualReturn" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Состояние:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtReturnCondition" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Повреждения:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtDamageDescription" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="0,0,0,10"/>

                            <TextBlock Text="Комментарий:" Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                            <TextBlock x:Name="txtManagerComment" Grid.Row="3" Grid.Column="1" Style="{StaticResource InfoValue}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Примечания -->
                    <GroupBox x:Name="grpNotes" Header="📝 Примечания" FontWeight="SemiBold">
                        <StackPanel Margin="10">
                            <TextBlock x:Name="txtNotes" Style="{StaticResource InfoValue}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2" 
                    Background="#F9F9F9" 
                    CornerRadius="0,0,8,8" 
                    Padding="20,15"
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnCloseWindow" 
                           Content="Закрыть" 
                           Style="{StaticResource CancelButton}"
                           Click="btnClose_Click" Height="41" Margin="0,0,0,0.333" VerticalAlignment="Bottom"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>